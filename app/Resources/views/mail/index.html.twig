{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mails list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Body</th>
                <th>Receiver</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mail in mails %}
            <tr>
                <td><a href="{{ path('mail_show', { 'id': mail.id }) }}">{{ mail.id }}</a></td>
                <td>{{ mail.subject }}</td>
                <td>{{ mail.body }}</td>
                <td>{{ mail.receiver }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('mail_show', { 'id': mail.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('mail_edit', { 'id': mail.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mail_new') }}">Create a new mail</a>
        </li>
    </ul>
{% endblock %}
